<h2 class="content-head is-center">What do you need?</h2>

<%= form_for :request, url: url_for(:controller => 'requests', :action => 'create'), html: { class: "pure-form" } do |f| %>
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-2">
      <label for="request_food" class="pure-checkbox">
        <%= f.check_box :food %>
        Food
      </label>

      <label for="request_medicine" class="pure-checkbox">
        <%= f.check_box :medicine %>
        Medicine
      </label>

      <label for="request_water" class="pure-checkbox">
        <%= f.check_box :water %>
        Water
      </label>

      <label for="request_housing_and_shelter" class="pure-checkbox">
        <%= f.check_box :housing_and_shelter %>
        Housing & Shelter
      </label>

      <label for="request_other" class="pure-checkbox">
        <%= f.check_box :other %>
        Other
      </label>
    </div>

    <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-2">
      <label for="request_labour" class="pure-checkbox">
        <%= f.check_box :labour %>
        Labour
      </label>

      <label for="request_equipment" class="pure-checkbox">
        <%= f.check_box :equipment %>
        Equipment
      </label>

      <label for="request_short_range_transport" class="pure-checkbox">
        <%= f.check_box :short_range_transport %>
        Transport (Short range)
      </label>

      <label for="request_clothes_and_blankets" class="pure-checkbox">
        <%= f.check_box :clothes_and_blankets %>
        Clothes & Blankets
      </label>
    </div>
  </div>

  <div class="content is-center">
    <%= f.submit "Search", class: "pure-button" %>
  </div>
<% end %>

<p> ^^^^^^^^^^^^^^^  FIND HELP PANEL  ^^^^^^^^^^^^^^^^</p>
